{
  "name": "gha-generate-nuget-config",
  "version": "1.0.0",
  "description": "GitHub Action to generate NuGet config file from JSON",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmit --skipLibCheck && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest",
    "update": "npm update --save-dev && npm update --save",
    "update:major": "npm-check-updates -u && npm install",
    "all": "npm run format && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luscii/gha-generate-nuget-config.git"
  },
  "keywords": [
    "github",
    "actions",
    "nuget",
    "config",
    "generator"
  ],
  "author": "Luscii",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vercel/ncc": "0.38.3",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "29.0.1",
    "glob": "11.0.3",
    "jest": "30.0.5",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "18.0.2",
    "prettier": "^3.2.5",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.1",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1"
  }
}
